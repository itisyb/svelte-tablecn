{
	"name": "svelte-tablecn",
	"private": false,
	"version": "0.1.0",
	"type": "module",
	"description": "A powerful, feature-rich data grid component for Svelte 5. Port of tablecn.com",
	"author": "itisyb",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/itisyb/svelte-tablecn"
	},
	"keywords": [
		"svelte",
		"svelte5",
		"data-grid",
		"table",
		"datagrid",
		"spreadsheet",
		"tablecn",
		"shadcn",
		"tanstack-table"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"format": "prettier --write .",
		"lint": "prettier --check .",
		"registry:build": "shadcn-svelte registry build"
	},
	"devDependencies": {
		"@internationalized/date": "^3.8.1",
		"@lucide/svelte": "^0.544.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-vercel": "^6.2.0",
		"@sveltejs/kit": "^2.48.5",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.17",
		"@vitest/browser-playwright": "^4.0.10",
		"bits-ui": "^2.11.0",
		"clsx": "^2.1.1",
		"playwright": "^1.56.1",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"shadcn-svelte": "^1.0.12",
		"svelte": "^5.43.8",
		"svelte-check": "^4.3.4",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^3.2.2",
		"tailwindcss": "^4.1.17",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"vite": "^7.2.2",
		"vitest": "^4.0.10",
		"vitest-browser-svelte": "^2.0.1"
	},
	"dependencies": {
		"@faker-js/faker": "^10.1.0",
		"@tanstack/table-core": "^8.21.3",
		"@tanstack/virtual-core": "^3.13.12",
		"svelte-dnd-action": "^0.9.67",
		"svelte-sonner": "^1.0.6"
	}
